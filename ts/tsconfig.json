{
  "extends": "@tsconfig/node12/tsconfig.json",
    "compilerOptions": {
      "esModuleInterop": true,
      "allowJs": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "lib": ["es2018"],
      "module": "es6",
      "target": "ES2020",
      "baseUrl": "./src",
      "paths": {
        "*": ["node_modules/*", "src/types/*"],
        "src/*": [
          "./*"
        ]
        "utils/*": [
          "./utils/*"
        ]
      },
      
      "typeRoots": ["./node_modules/@types", "./src/@types"],
      "outDir": "./built"
    },
    "include": ["./src/**/*", "jest.config.js"],
    "exclude": ["node_modules"]
}